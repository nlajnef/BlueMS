<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/generic_textual_demo_hor_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/generic_textual_demo_spinner"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/generic_textual_demo_button"
            style="@style/IconButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:icon="@drawable/ic_play_arrow"
            app:iconPadding="0dp"
            android:layout_marginEnd="4dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/generic_textual_demo_button_serial_console"
            style="@style/IconButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:icon="@drawable/baseline_terminal_24"
            android:layout_weight="1"
            app:iconPadding="0dp" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/generic_textual_demo_scrollview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:fadeScrollbars="false"
        android:fillViewport="true"
        android:scrollbars="vertical"
        android:layout_weight="8">

        <TextView
            android:id="@+id/generic_textual_demo_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Feature data" />
    </ScrollView>

    <ScrollView
        android:id="@+id/textual_demo_serial_console_scrollview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/Grey2"
        android:visibility="gone"
        tools:visibility="visible"
        android:fadeScrollbars="false"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp">

        <TextView
            android:id="@+id/textual_demo_serial_console_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:textSize="12sp" />
    </ScrollView>
</LinearLayout>
