<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/audio_waitingData"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/audioClassification_waitingData"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <com.st.audio_classification_demo.audio_view.SceneClassificationView
        android:id="@+id/audio_view_scene_classification"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.st.audio_classification_demo.audio_view.BabyCryingView
        android:id="@+id/audio_view_baby_crying"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
